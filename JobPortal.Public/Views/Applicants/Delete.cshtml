@model JobPortal.Public.Models.ViewModels.ApplicantViewModel

@{
    ViewData["Title"] = "Delete Applicant";
}

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h4>Are you sure you want to delete this applicant?</h4>
        </div>
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-2">
                Full Name
            </dt>
            <dd class="col-sm-10">
                @($"{Model.FirstName} {Model.LastName}")
            </dd>
            <dt class="col-sm-2">
                Email
            </dt>
            <dd class="col-sm-10">
                @Model.Email
            </dd>
            <dt class="col-sm-2">
                Position
            </dt>
            <dd class="col-sm-10">
                @Model.JobPositionName
            </dd>
        </dl>
    </div>
    <div class="card-footer d-flex justify-content-end align-items-center gap-2">
        <form asp-action="Delete" method="post" asp-controller="Applicants">
            <input type="hidden" asp-for="ApplicantId"/>
            <input type="submit" value="Delete" class="btn btn-sm btn-danger"/>
            <a asp-action="Index" class="btn btn-sm btn-secondary">Cancel</a>
        </form>
    </div>
</div>