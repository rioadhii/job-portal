@model JobPortal.Public.Models.ViewModels.ApplicantViewModel

@{
    ViewData["Title"] = "Delete Applicant";
}

<h2>Are you sure you want to delete this applicant?</h2>

<div>
    <h4>Applicant</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Model.LastName
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Job Position
        </dt>
        <dd class="col-sm-10">
            @Model.JobPositionName
        </dd>
    </dl>

    <form asp-action="Delete" method="post" asp-controller="Applicants">
        <input type="hidden" asp-for="ApplicantId"/>
        <input type="submit" value="Delete" class="btn btn-danger"/>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>